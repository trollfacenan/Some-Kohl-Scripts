local function start(plr)
	spawn(function()
		plr.Chatted:Connect(function(msg)
			if string.find(msg:lower(),"cring") then
				plrs:Chat("pm "..plr.Name.." Lol imagine saying that")
				sbanaction(plr.Name)
				table.insert(bantbl,plr.Name)
			end
		end)
	end)
end
for i,pler in pairs(plrs:GetPlayers()) do
	start(pler)
end
plrs.PlayerAdded:Connect(function(pler)
	start(pler)
end)
